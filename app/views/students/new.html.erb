<h1>New Student</h1>

<%= form_for @student do |f| %>
  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <h3>Courses</h3>
  <div>
    <%= f.collection_check_boxes :course_ids, @courses, :id, :name do |c| %>
      <div>
        <%= c.check_box %> <%= c.label %>
      </div>
    <% end %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>
